{
  "name": "mean2",
  "description": "(M)EAN Stack with Angular 2+ Starter",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "author": "My Name <my@email.com>",
  "homepage": "https://example.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mir4ef/mean2.git"
  },
  "bugs": {
    "url": "https://github.com/mir4ef/mean2/issues"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "main": "server.js",
  "directories": {
    "app": "src",
    "node": "server"
  },
  "scripts": {
    "postinstall": "npm run copy:swagger",
    "start": "npm run docs && npm run ng serve -- --ssl",
    "build": "npm run docs && npm run ng build",
    "build:prod": "npm run security:scan && npm run docs && npm run lint && npm test && npm run ng build -- --prod --aot --build-optimizer",
    "build:watch": "npm run ng build -- -w",
    "test": "npm run test:node:coverage && npm run test:ng:coverage -- --single-run",
    "test:ng": "ng test",
    "test:ng:coverage": "npm run test:ng -- --code-coverage",
    "test:node": "node server/jasmine/helpers/reporter.js",
    "test:node:coverage": "node ./node_modules/nyc/bin/nyc.js npm run test:node",
    "e2e": "npm run ng e2e",
    "lint": "npm run lint:css && npm run lint:node && npm run lint:ts",
    "lint:css": "node ./node_modules/sass-lint/bin/sass-lint --config ./.sass-lint.yml --no-exit --verbose",
    "lint:node": "node ./node_modules/eslint/bin/eslint.js ./server cluster.js server.js",
    "lint:ts": "npm run ng lint --type-check",
    "docs": "npm run docs:api && npm run docs:app && npm run docs:css",
    "docs:app": "node ./node_modules/typedoc/bin/typedoc --out ./src/documentation/app/ --mode file --module \"node\" --target \"ES5\" ./src/app/",
    "docs:api": "node ./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js -d ./server/swagger.def.js -o ./src/documentation/api/swagger.json ./server/routes/v1/*.js ./server/routes/v1/**/*.js",
    "docs:api:watch": "npm run docs:api -- -w",
    "docs:css": "node ./node_modules/del-cli/cli.js \"./src/documentation/css/*.html\" && node ./node_modules/node-sass/bin/node-sass ./src/styles.scss ./src/documentation/css/styles.css && node ./node_modules/kss/bin/kss --config kss-config.json",
    "copy:swagger": "node ./node_modules/copyfiles/copyfiles -f \"./node_modules/swagger-ui-dist/sw*.js*\" \"./node_modules/swagger-ui-dist/sw*.css*\" \"./node_modules/swagger-ui-dist/oauth2-redirect.html\" ./src/documentation/api",
    "security:scan": "node ./node_modules/nsp/bin/nsp check",
    "pre-git": "npm run e2e && npm run build:prod",
    "ng": "ng"
  },
  "pre-commit": [
    "pre-git"
  ],
  "pre-push": [
    "pre-git"
  ],
  "dependencies": {
    "@angular/animations": "^4.4.3",
    "@angular/common": "^4.4.3",
    "@angular/compiler": "^4.4.3",
    "@angular/core": "^4.4.3",
    "@angular/forms": "^4.4.3",
    "@angular/platform-browser": "^4.4.3",
    "@angular/platform-browser-dynamic": "^4.4.3",
    "@angular/router": "^4.4.3",
    "body-parser": "^1.18.0",
    "chalk": "^2.1.0",
    "compression": "^1.7.0",
    "core-js": "^2.5.0",
    "cors": "^2.8.3",
    "express": "^4.16.1",
    "express-rate-limit": "^2.9.0",
    "helmet": "^3.8.0",
    "intl": "^1.2.5",
    "jsonwebtoken": "^8.1.0",
    "morgan": "^1.9.0",
    "rxjs": "^5.4.2",
    "spdy": "^3.4.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.4.2",
    "@angular/compiler-cli": "^4.4.3",
    "@angular/language-service": "^4.4.3",
    "@types/jasmine": "~2.6.0",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~8.0.28",
    "codelyzer": "~3.2.0",
    "copyfiles": "^1.2.0",
    "del-cli": "^1.1.0",
    "eslint": "~4.8.0",
    "jasmine": "~2.8.0",
    "jasmine-core": "~2.8.0",
    "jasmine-node": "~1.14.5",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-spec-reporter": "0.0.31",
    "kss": "^3.0.0-beta.18",
    "node-sass": "^4.5.3",
    "nsp": "^2.8.0",
    "nyc": "^11.2.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "protractor": "~5.1.0",
    "sass-lint": "^1.12.0",
    "swagger-jsdoc": "^1.9.5",
    "swagger-ui-dist": "^3.3.0",
    "ts-node": "~3.3.0",
    "tslint": "~5.7.0",
    "typedoc": "~0.9.0",
    "typescript": "~2.5.2"
  }
}
